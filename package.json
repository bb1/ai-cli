{
  "name": "ai-cli",
  "version": "0.7.0",
  "main": "src/index.ts",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.3"
  },
  "bin": {
    "ai": "src/index.ts"
  },
  "description": "Bun-native CLI tool that uses Ollama to generate shell commands from natural language",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun run scripts/build.ts --outfile=ai",
    "build:linux-x64": "bun run scripts/build.ts --target=bun-linux-x64 --outfile=ai-linux-x64",
    "build:linux-arm64": "bun run scripts/build.ts --target=bun-linux-arm64 --outfile=ai-linux-arm64",
    "build:darwin-x64": "bun run scripts/build.ts --target=bun-darwin-x64 --outfile=ai-darwin-x64",
    "build:darwin-arm64": "bun run scripts/build.ts --target=bun-darwin-arm64 --outfile=ai-darwin-arm64",
    "build:windows-x64": "bun run scripts/build.ts --target=bun-windows-x64 --outfile=ai-windows-x64.exe",
    "lint": "bun x @biomejs/biome check ./src",
    "lint:fix": "bun x @biomejs/biome check --write ./src",
    "test": "bun test"
  },
  "type": "module",
  "dependencies": {
    "smol-toml": "^1.5.2"
  }
}
